{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/types",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@intlayer/*": ["../*"],
      "@intlayer/core": ["../core/src"],
      "@intlayer/config": ["../config/src"],
      "@intlayer/editor-react": ["../editor-react/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
